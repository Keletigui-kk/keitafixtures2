{# ce fichier contient le message qui sera envoyé lors de l'inscription #}

{% for label, messages in app.flashes %}
    <section class="container">
     {# flashbag labels have the same names of the bootstrap alert Classes. #}
        <div class="alert alert-{{label}} alert-dimissible fade show text-center h5 my-4" role="alert">
            {% for message in messages %}
            {# me display different label icon relative to the label. #}
                <p class="text-center font-weight-bold">{{ message|raw }} {% if label is same as ("success") %}&#x1F44D;{% elseif label is same as ("danger") %}&#x1F6A7;{% endif %}</p>  <!--&#x1F44D;= emodji pd'une main avec le pouce vers le haut-->
            {% endfor %}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"> &times;</span>
            </button>
        </div>
    </section>
    {# same as c'est l'quivalenr de strictement égale #}
{% endfor %}